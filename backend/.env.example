# Backend
PORT=3000

# Asaas
ASAAS_API_KEY=your_asaas_api_key

# Split (opcional): se ASAAS_SPLIT_WALLET_ID estiver preenchido, aplica split no pagamento
# Percentual em % (1 = 1%)
ASAAS_SPLIT_WALLET_ID=
ASAAS_SPLIT_PERCENTUAL_VALUE=1

# E-mail (Nodemailer / SMTP)
# Se false, o backend ignora envio de e-mail (inclusive no webhook)
EMAIL_CONFIRMATION_ENABLED=false
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM="Vagafogo Reservas" <you@example.com>
